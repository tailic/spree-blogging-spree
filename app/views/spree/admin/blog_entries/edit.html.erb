<% content_for :page_title do %>
   <%= Spree.t(:blog_entries) %><i class="icon-arrow-right"></i> <%= Spree.t(:editing) %> "<%= @blog_entry.title %>"
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back), spree.admin_blog_entries_url, :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @blog_entry %>

<%= form_for [:admin, @blog_entry], html: { multipart: true} do |f| %>
  <%= render :partial => f %>
  <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>
